-- WALL HACK FEATURES
local WallSection = VisualTab:CreateSection("Wall Hack")

local WallHackToggle = VisualTab:CreateToggle({
    Name = "Wall Hack",
    CurrentValue = false,
    Flag = "WallHackEnabled",
    Callback = function(Value)
        getgenv().WallHackEnabled = Value
        if Value then
            EnableWallHack()
